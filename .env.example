# ============================================
# Stagehand Automation Template Environment Variables
# ============================================
# Copy this file to .env and fill in the actual values
# Note: Do not commit the .env file to version control

# Maximum retry attempts on login failure (optional, default: 3)
MAX_RETRIES=3

# ============================================
# LLM Settings (Required)
# ============================================
# LLM provider: anthropic or gemini
MODEL_PROVIDER=anthropic

# Model name
# - Claude: claude-haiku-4-5-20251001, claude-3-5-sonnet-20241022
# - Gemini: gemini-2.0-flash-exp, gemini-1.5-pro
MODEL_NAME=claude-haiku-4-5-20251001

# LLM API Key
# - Anthropic: Get from https://console.anthropic.com/
# - Gemini: Get from https://aistudio.google.com/app/apikey
MODEL_API_KEY=your-api-key-here

# ============================================
# Notification System Settings (Optional)
# ============================================
# Enabled notifiers (comma-separated, supports: line, email)
# Example: ENABLED_NOTIFIERS=line,email
ENABLED_NOTIFIERS=

# ============================================
# LINE Bot Notification Settings (Optional)
# ============================================
# LINE Bot Channel Access Token
# Get from LINE Developers Console: https://developers.line.biz/console/
LINE_CHANNEL_ACCESS_TOKEN=

# LINE Bot Channel Secret
LINE_CHANNEL_SECRET=

# LINE Group ID (format: starts with C)
LINE_GROUP_ID=

# LINE Target ID list (comma-separated, supports multiple recipients)
# Each ID can be a Group ID (starts with C) or User ID (starts with U)
# Example: LINE_TARGET_IDS=Cxxxxxxxxxxxxx,Uxxxxxxxxxxxxx
LINE_TARGET_IDS=

# ============================================
# Email Notification Settings (Optional)
# ============================================
# SMTP server host (default: smtp.gmail.com)
EMAIL_SMTP_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL, default: 587)
EMAIL_SMTP_PORT=587

# SMTP username (usually the email address)
EMAIL_SMTP_USERNAME=

# SMTP password or app password
# Gmail users should use "App Password":
# 1. Enable "2-Step Verification"
# 2. Go to https://myaccount.google.com/apppasswords to generate password
EMAIL_SMTP_PASSWORD=

# Default recipients (comma-separated, supports multiple recipients)
# Example: EMAIL_DEFAULT_RECIPIENTS=admin@example.com,dev@example.com
EMAIL_DEFAULT_RECIPIENTS=

# Whether to use TLS (true/false, default: true)
EMAIL_USE_TLS=true

# ============================================
# Stagehand Automation Framework Settings (Optional)
# ============================================
# Enable headless mode (true/false, default: true)
# - true: Headless mode, browser runs in background (suitable for production)
# - false: Show browser window (suitable for development/debugging)
STAGEHAND_HEADLESS=true

# ============================================
# Logging System Settings (Optional)
# ============================================
# Global log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# === Console Logging ===
# Enable console log output (true/false)
LOG_CONSOLE_ENABLED=true

# Console log level
LOG_CONSOLE_LEVEL=INFO

# === File Logging ===
# Enable file logging (true/false)
LOG_FILE_ENABLED=true

# File log level
LOG_FILE_LEVEL=DEBUG

# Log file path
LOG_FILE_PATH=./logs/automation.log

# Maximum log file size (bytes, default: 10MB)
LOG_FILE_MAX_BYTES=10485760

# Number of log file backups (default: 5)
LOG_FILE_BACKUP_COUNT=5

# === Log Format ===
# Log message format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log date format
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# === Module-Level Log Control ===
# Third-party package log levels (reduce noise)
LOG_LEVEL_STAGEHAND=WARNING
LOG_LEVEL_PLAYWRIGHT=WARNING
LOG_LEVEL_URLLIB3=WARNING

# ============================================
# Notes
# ============================================
# 1. Application will throw an error on startup if required env vars are not set
# 2. LINE notification is optional, not setting it won't affect core functionality
# 3. Logging settings are optional, default values will be used if not set
